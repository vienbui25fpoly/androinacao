<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="THÊM SÁCH"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edMaSach_ThemSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Sách"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edTenSach_ThemSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Sách"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#989797"
            android:textSize="18sp"
            android:paddingLeft="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên Thể Loại"/>

        <Spinner
            android:id="@+id/spTheLoai_ThemSach"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edTacGia_ThemSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tác Giả"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edNXB_ThemSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhà Xuất Bản"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edGia_ThemSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edSoluong_ThemSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số Lượng"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginBottom="3dp"
            android:id="@+id/btn_add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/login_button"
            android:text="Thêm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <Button
            android:layout_marginBottom="3dp"
            android:id="@+id/btn_cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/login_button"
            android:layout_marginLeft="10dp"
            android:text="Hủy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>